<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="402dp"
        android:layout_height="275dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@color/accentGray"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accentGray"

            android:orientation="horizontal">

            <TextView
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Team Bet On"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:paddingRight="10dp"
                android:text="Odds"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teamBetOnLiveMLet"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@color/white"
                android:clickable="false"
                android:focusable="false"
                android:inputType="none"></TextView>

            <TextView
                android:id="@+id/oddsBetLiveMLet"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.2"
                android:background="@color/white"
                android:clickable="false"
                android:focusable="false"
                android:inputType="none"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Team Bet Against"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teamBetAgainstLiveMLet"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@color/white"
                android:clickable="false"
                android:focusable="false"
                android:inputType="none"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Source of Bet"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sourceBetLiveMLet"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@color/white"
                android:clickable="false"
                android:focusable="false"
                android:inputType="none"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accentGray"

            android:orientation="horizontal">

            <TextView
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Wager"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:paddingRight="10dp"
                android:text="To Win"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wagerBetLiveMLet"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/white"
                android:clickable="false"
                android:focusable="false"
                android:inputType="none"></TextView>

            <TextView
                android:id="@+id/toWinBetLiveMLet"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:background="@color/white"
                android:clickable="false"
                android:focusable="false"
                android:inputType="none"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <Button
                android:id="@+id/wonLiveBetBtnML"
                android:layout_marginRight="5dp"
                android:layout_width="2dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:background="@color/btnOrangeColor"
                android:text="Win bet?"></Button>
            <Button
                android:id="@+id/lostLiveBetBtnML"
                android:layout_marginLeft="5dp"
                android:layout_width="2dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:background="@color/btnOrangeColor"
                android:text="Lose bet?"></Button>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFrag"
    android:background="@color/backGray">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/menuCreateBetBtn"
            android:layout_width="363dp"
            android:layout_height="75dp"
            android:layout_marginTop="50dp"
            android:background="@color/btnOrangeColor"
            android:text="Create Bet"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <Button
            android:id="@+id/menuLiveBetsBtn"
            android:layout_width="363dp"
            android:layout_height="75dp"
            android:layout_marginTop="50dp"
            android:background="@color/btnOrangeColor"
            android:text="View Live Bets"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menuCreateBetBtn" />

        <Button
            android:id="@+id/menuBettingHistBtn"
            android:layout_width="363dp"
            android:layout_height="75dp"
            android:layout_marginTop="50dp"
            android:background="@color/btnOrangeColor"
            android:text="Betting History"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menuLiveBetsBtn" />

        <Button
            android:id="@+id/menuLearnBetBtn"
            android:layout_width="363dp"
            android:layout_height="75dp"
            android:layout_marginTop="50dp"
            android:background="@color/btnOrangeColor"
            android:text="Learn Sports Betting"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menuBettingHistBtn" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Welcome to myBetJournal!"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>